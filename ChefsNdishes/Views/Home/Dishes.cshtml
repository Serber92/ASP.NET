@{
    ViewData["Title"] = "Dishes";
}
<h1>@ViewData["Title"]</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Chef</th>
      <th scope="col">Tastiness</th>
      <th scope="col">Calories</th>
    </tr>
  </thead>
  <tbody>
      @{ 
        foreach (Dish dish in @ViewBag.AllDishes)
        {
            <tr>
            <td>@dish.Name</td>
            <td>@dish.Cook.FirstName @dish.Cook.LastName</td>
            <td>@dish.Tastiness</td>
            <td>@dish.Calories</td>
            </tr>
        }
      }
  </tbody>
</table>
