@{
    ViewData["Title"] = "Login";
}
<h1>@ViewData["Title"]</h1>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IndexViewModel
<h4>@ViewBag.LoggedIn</h4>
<form asp-action="LoginProcess" asp-controller="Home" method="POST">
  <div class="form-group">
    <span asp-validation-for="NewLogin.Email"></span>
    <label asp-for="NewLogin.Email">Email address</label>
    <input asp-for="NewLogin.Email" type="email" class="form-control" aria-describedby="emailHelp">

    <span asp-validation-for="NewLogin.Password"></span>
    <label asp-for="NewLogin.Password">Password</label>
    <input asp-for="NewLogin.Password" type="password" class="form-control">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>


