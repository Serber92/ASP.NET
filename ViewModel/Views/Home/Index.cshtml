@model User


@{
    ViewData["Title"] = "Home Page";
}

<br>
<br>
<br>
<br>
<br>
<br>
@Html.ValidationSummary()
<center>
    <div class="card" style="width: 50%;">
    <div class="card-body">
        <form asp-action='Info' asp-controller="Home" method="POST">
        <div class="form-group">
            <span asp-validation-for="Name"></span>
            <label class="float-left" asp-for="Name"></label>
            <input class="form-control" asp-for="Name"> 
        </div>   
        <label class="float-left" for="location">Location</label>      
        <div class="input-group mb-3">
            <select class="custom-select" id="location" asp-for="Location">
            <option selected>Choose...</option>
            <option value="Moscow">Moscow</option>
            <option value="Kiev">Kiev</option>
            <option value="Odessa">Odessa</option>
            </select>
        </div>
        <label class="float-left" for="language">Language</label>      
        <div class="input-group mb-3">
            <select class="custom-select" id="language" asp-for="Language">
            <option selected>Choose...</option>
            <option value="C#">C#</option>
            <option value="Japanese">Japanese</option>
            <option value="Albanian">Albanian</option>
            </select>
        </div>
        <div class="input-group">
            <div class="input-group-prepend">
            <span class="input-group-text">Message</span>
            </div>
            <textarea class="form-control" aria-label="With textarea" asp-for="Message"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    </div>
</center>

